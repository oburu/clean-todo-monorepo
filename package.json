{
  "name": "@clean-todo/monorepo",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "api": "yarn workspace @clean-todo/api",
    "react": "yarn workspace @clean-todo/react",
    "db": "yarn workspace @clean-todo/db",
    "bl": "yarn workspace @clean-todo/bl",
    "cli": "yarn workspace @clean-todo/cli",
    "clean:node_modules": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' +"
  }
}


